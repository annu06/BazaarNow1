
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Enable reading by everyone, but only user can write their data
    // This is simplified. In production, restrict further.
    
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /orders/{orderId} {
      // Users can see their own orders
      allow read: if request.auth != null && (resource.data.customerId == request.auth.uid || request.auth.token.role == 'admin');
      allow create: if request.auth != null;
      allow update: if request.auth != null && (resource.data.customerId == request.auth.uid || request.auth.token.role == 'admin' || request.auth.token.role == 'delivery');
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.token.role == 'admin' || request.auth.token.role == 'vendor');
    }

    match /stores/{storeId} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.token.role == 'admin' || request.auth.token.role == 'vendor');
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
